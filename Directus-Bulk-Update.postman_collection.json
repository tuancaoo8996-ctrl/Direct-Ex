							"mode": "raw",
							"raw": "{\n  \"items\": [\n    { \"id\": 1, \"price\": 1000, \"stock\": 20 },\n    { \"id\": 2, \"name\": \"Updated Name\" }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/directus-extension-bulk-update/{{collection}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
