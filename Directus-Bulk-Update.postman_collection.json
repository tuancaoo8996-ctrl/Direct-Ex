						"body": {
							"mode": "raw",
							"raw": "{\n  \"items\": [\n    { \"id\": 1, \"price\": -10 }\n  ],\n  \"validation\": {\n    \"fields\": {\n      \"price\": { \"type\": \"number\", \"min\": 0 }\n    }\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/directus-extension-bulk-update/{{collection}}",
							"host": [
								"{{base_url}}"
